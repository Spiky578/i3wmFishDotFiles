#==========|definitions|==========#
#setsuper.
set $mod Mod4

#fonts. 
font pango:Input-Regular_(InputMono-Regular) 8

#==========|programs.|==========#
bindsym $mod+Return exec 'st'
bindsym $mod+w exec 'qutebrowser'
bindsym $mod+Shift+w exec st -e 'nmtui'
bindsym $mod+r exec st -e 'vifm'

#dropdownterminal.
#this one has dpi issues using -n instead of -c
#bindsym $mod+Shift+Return scratchpad show
#for_window [instance="dropdown"] floating enable
#for_window [instance="dropdown"] move scratchpad
#for_window [instance="dropdown"] border pixel 2
#exec --no-startup-id st -n "dropdown" 

#dropdownterminal.
bindsym $mod+Shift+Return scratchpad show
for_window [class="dropdown"] floating enable
for_window [class="dropdown"] move scratchpad
for_window [class="dropdown"] border pixel 2
exec --no-startup-id st -c "dropdown" 

#assignmpvto5.
assign [class="mpv"] 5 

#==========|keybindings.|==========#
#killwindow.
bindsym $mod+q kill

#changefocus.
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

#cycleworkspaces.
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

#movefocusedwindow.
#bindsym $mod+Shift+h move left
#bindsym $mod+Shift+j move down
#bindsym $mod+Shift+k move up
#bindsym $mod+Shift+l move right

#resizefocusedwindow.
bindsym $mod+Shift+h resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+j resize grow height 10 px or 10 ppt
bindsym $mod+Shift+k resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+l resize grow width 10 px or 10 ppt

#splitorientation.
bindsym $mod+u split h
bindsym $mod+i split v

#enterfullscreenmode.
bindsym $mod+shift+f fullscreen toggle

#toggle_floating.
bindsym $mod+space floating toggle

#restart_i3. 
bindsym $mod+Shift+r restart
#logout. 
#bindsym $mod+Shift+BackSpace exec st -e 

#volume_keys.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

#brightness_keys.
bindsym XF86MonBrightnessUp exec "xbacklight -inc 10; notify-send 'brightness up'"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 10; notify-send 'brightness down'"

# We use variables to avoid repeating the names in multiple places.
set $ws1 "1:Octopus"
set $ws2 "2:Pleco"
set $ws3 "3:Carp"
set $ws4 "4:Barb"
set $ws5 "5:Salmon"
set $ws6 "6:Cod"
set $ws7 "7:Shark"
set $ws8 "8:Pike"
set $ws9 "9:Squid"
set $ws10 "10:Bass"

